<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.power.ssm.dao.FaultDeviceDao">

    <resultMap id="BaseResultMap" type="com.power.ssm.model.FaultDevice">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="model" jdbcType="VARCHAR" property="model" />
        <result column="factory" jdbcType="VARCHAR" property="factory" />
    </resultMap>


    <select id="query" resultMap="BaseResultMap" parameterType="com.power.ssm.model.FaultDevice">
        select * from `fault_device`;
    </select>


    <select id="getId" parameterType="com.power.ssm.model.FaultDevice" resultMap="BaseResultMap">
        select * from `fault_device`
        where `model` = #{model, jdbcType=VARCHAR}
            and `factory` = #{factory, jdbcType=VARCHAR}
    </select>

    <select id="select" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select * from fault_device
        where id = #{pk, jdbcType=INTEGER}
    </select>

    <insert id="insert" parameterType="com.power.ssm.model.FaultDevice" useGeneratedKeys="true" keyProperty="id">
        insert into fault_device (`model`, `factory`)
        values (#{model,jdbcType=VARCHAR},#{factory,jdbcType=VARCHAR})
    </insert>

    <update id="update" parameterType="com.power.ssm.model.FaultDevice">
        update fault_device
        set
          parentId = #{parentId,jdbcType=INTEGER},
          `title` = #{title,jdbcType=VARCHAR}
        where id = #{id,jdbcType=INTEGER}
    </update>

    <delete id="delete" parameterType="java.lang.Integer" >
      delete from `fault_device` where id = #{id,jdbcType=INTEGER}
    </delete>
</mapper>